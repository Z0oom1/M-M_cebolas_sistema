# Nginx - Proxy reverso para M&M Cebolas
# Servidor: Ubuntu 24.04 | Node na porta 3000
# Coloque em /etc/nginx/sites-available/ e ative com symlink em sites-enabled.

# Redirecionar HTTP → HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name portalmmcebolas.com.br www.portalmmcebolas.com.br 72.60.8.186;
    return 301 https://$server_name$request_uri;
}

# HTTPS - aplicação (proxy 443 → Node porta 3000)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name portalmmcebolas.com.br www.portalmmcebolas.com.br;

    ssl_certificate     /etc/letsencrypt/live/portalmmcebolas.com.br/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/portalmmcebolas.com.br/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
